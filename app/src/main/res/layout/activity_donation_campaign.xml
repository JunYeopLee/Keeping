<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="com.example.junyeop_imaciislab.keeping.DonationCampaignActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="5"
        android:padding="0dp"
        android:background="#DCDCDC">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/donation_form_campaign_image"
            android:scaleType="fitCenter"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_weight="7.5"
        android:padding="15dp"
        android:background="#DCDCDC">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/donation_form_campaign_body">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="37dp"
                android:scaleType="fitCenter"
                android:src="@drawable/donation_form_campaign_num_text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="37dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edit_bloodid_cam"
                    android:layout_height="match_parent"
                    android:layout_width="200dp"
                    android:textColor="@android:color/darker_gray"
                    android:editable="false"
                    android:textSize="10dp"
                    android:gravity="bottom"
                    android:hint="10자리를 입력 해주세요" />
                <ImageButton
                    android:id="@+id/btn_certifi_choice_cam"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/donation_form_campaign_num_btn"/>
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="37dp"
                android:src="@drawable/donation_form_campaign_message_text" />

            <EditText
                android:id="@+id/edit_message_cam"
                android:layout_width="250dp"
                android:layout_height="110dp"
                android:layout_marginLeft="37dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:hint="메세지를 입력 해주세요"
                android:textColor="@android:color/darker_gray"
                android:inputType="textMultiLine"
                android:lines="7"
                android:gravity="top"
                android:background="@drawable/background_edit_box"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_commit_donation_cam"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="기부하기"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/donation_form_submit_bg" />
</LinearLayout>
