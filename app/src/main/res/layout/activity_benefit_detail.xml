<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.keeping.BenefitActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#386fa7"
        android:background="@android:color/white"
        android:text="혜택" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/img_event_detail_title"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/benefit_content_event1_detail_title"/>
            <ImageView
                android:id="@+id/img_event_detail_daytime"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_below="@+id/img_event_detail_title"
                android:layout_alignLeft="@+id/img_event_detail_title"
                android:src="@drawable/benefit_content_event1_detail_daytime"/>
            <TextView
                android:id="@+id/txt_dday"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="60일 남음"
                android:textColor="@android:color/white"
                android:textSize="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignTop="@+id/img_event_detail_daytime"
                android:layout_toRightOf="@id/img_event_detail_daytime"
                android:background="@drawable/benefit_content_event1_detail_daybg"/>
            <ImageButton
                android:id="@+id/btn_detail_use_card"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/btn_detail_use"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:src="@drawable/benefit_content_event1_detail_image"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_sns_in"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_detail_in"/>
            <ImageButton
                android:id="@+id/btn_sns_tw"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_sns_in"
                android:src="@drawable/btn_detail_tw"/>
            <ImageButton
                android:id="@+id/btn_sns_fb"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/btn_sns_tw"
                android:src="@drawable/btn_detail_fb"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="1dp"
            android:background="#DFDFDF"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_tab1_tab"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/benefit_content_event1_detail_tab1_text_touch"/>

            <ImageButton
                android:id="@+id/btn_tab2_tab"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/benefit_content_event1_detail_tab2_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_tab1_bar"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:src="@drawable/benefit_content_event1_detail_tab_bar"/>
            <ImageView
                android:id="@+id/btn_tab2_bar"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:src="@drawable/benefit_content_event1_detail_tab_bar"
                android:visibility="invisible"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="14dp"
            android:layout_height="170dp">
            <LinearLayout
                android:id="@+id/btn_tab1_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/benefit_content_event1_detail_tab1_headcopy"
                    android:visibility="visible"/>
                <ImageView
                    android:layout_width="317dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/benefit_content_event1_detail_tab1_copy"
                    android:visibility="visible"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btn_tab2_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/benefit_content_event1_detail_tab2_map"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>