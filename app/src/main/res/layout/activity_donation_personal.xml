<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical"
    tools:context="com.example.junyeop_imaciislab.keeping.DonationInstitutionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="24dp"
        android:layout_weight="11">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@drawable/donation_form_personal_body"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/donation_form_personal_title_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="개인"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/donation_form_personal_to_text"
                />
            <EditText
                android:id="@+id/edit_to_id"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="10dp"
                android:hint="아이디를 입력 해주세요"
                android:layout_marginLeft="27dp" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="27dp"
                android:scaleType="fitCenter"
                android:src="@drawable/donation_form_personal_num_text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/edit_bloodid"
                    android:layout_height="match_parent"
                    android:layout_width="200dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10dp"
                    android:gravity="bottom"
                    android:editable="false"
                    android:hint="10자리를 입력 해주세요" />
                <ImageButton
                    android:id="@+id/btn_certifi_choice"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/donation_form_personal_num_btn"/>
            </LinearLayout>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="27dp"
                android:src="@drawable/donation_form_personal_message_text" />

            <EditText
                android:id="@+id/edit_message"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginLeft="27dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:hint="메세지를 입력 해주세요"
                android:textColor="@android:color/darker_gray"
                android:inputType="textMultiLine"
                android:lines="7"
                android:gravity="top"
                android:background="@drawable/background_edit_box"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit_donation_personal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="기부하기"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/donation_form_submit_bg" />
</LinearLayout>
