<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.keeping.HomeActivity"
    android:orientation="vertical"
    android:background="@drawable/main_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="84.7dp"
            android:layout_height="99dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@android:color/white"
            android:text="이주은"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textSize="14dp"
            android:textColor="@android:color/holo_blue_dark"
            android:text="BloodLove" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:text="RH+ B"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/home_numbox"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="21.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_blooddonation_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="42.5dp"
                android:layout_height="21.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_certificate_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03"
                android:textSize="40dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="42.5dp"
                android:layout_height="21.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_donation_text"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:paddingTop="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="85.25dp"
                android:layout_height="28.6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_history"/>
            <ImageButton
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="160dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/home_refreshbtn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:background="@drawable/home_noticefield">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="61.5dp"
                android:layout_height="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_date_title1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145.5dp"
                android:textColor="@android:color/white"
                android:text="2015.03.25" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="87dp"
                android:layout_height="12.5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_date_title2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:textColor="@android:color/white"
                android:text="2015.03.25"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
