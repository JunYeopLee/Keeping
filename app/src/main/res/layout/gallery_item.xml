<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/donation_campaign_card2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="D - 22"
            android:textSize="17dp"
            android:textColor="@android:color/white"/>
        <ImageButton
            android:id="@+id/btn_lets_donation_campaign"
            android:layout_width="38.5dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/donation_donate_btn"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_card_bottom"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소아암을 앓고있는 소망이는 큰 수술을 앞두고 있습니다."
                android:textSize="9dp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="큰 힘이 될 수 있도록 여러분의 많은 관심이 필요합니다."
                android:textSize="9dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/layout_card_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_gray_bar"
                android:layout_width="198dp"
                android:layout_height="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="-12dp"
                android:scaleType="fitCenter"
                android:layout_toRightOf = "@+id/img_gray_heart"
                android:src="@drawable/donation_campaign_bar_frame" />
            <ImageView
                android:id="@+id/img_gray_heart"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:scaleType="fitCenter"
                android:src="@drawable/donation_campaign_grayheart"/>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>